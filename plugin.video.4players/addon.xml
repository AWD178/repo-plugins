<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.4players" name="4Players Videos" version="2.0.1" provider-name="Tristan Fischer (sphere@dersphere.de)">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.xbmcswift2" version="2.4.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language>de</language>
    <summary lang="en">Game related videos from www.4players.de</summary>
    <description lang="en">4Players is a german video-game magazine.[CR]With this add-on you can browse latest- or popular-videos, game reviews or browse videos by games you are interested in.[CR]You can also filter the videos by platforms in the add-on settings.</description>
  </extension>
</addon>