<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.brt"
       version="1.0.1"
       name="BestRussianTV.com"
       provider-name="BestRussianTV.com">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="brt.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">BestRussianTV.com plugin</summary>
		<summary lang="ru">BestRussianTV.com плагин для XBMC</summary>
        <description lang="en">Over 100 TV channels from Russia, Ukraine and other CIS countries, 40,000+ movies, huge selection of archived programs.</description>
		<description lang="ru">Более 100 каналов ТВ из России, Украины и стран СНГ, архив, огромная видеотека.</description>
        <platform>all</platform>
    </extension>
</addon>
